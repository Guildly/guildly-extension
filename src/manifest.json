{
    "name": "Guildly",
    "version": "0.0.1",
    "manifest_version": 3,
    "action": {
        "default_icon": {
            "16": "assets/logo.png",
            "48": "assets/logo.png",
            "128": "assets/logo.png"
        },
        "default_title": "Guildly",
        "default_popup": "index.html"
    },
    "icons": {
        "16": "assets/logo.png",
        "48": "assets/logo.png",
        "128": "assets/logo.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["inject.js"],
          "run_at": "document_start",
          "all_frames": true
        }
    ],
    "permissions": ["storage", "tabs", "activeTab"],
    "host_permissions": ["https://*.youtube.com/*"],
    "web_accessible_resources": [
        {
          "resources": [
            "inpage.js"
          ],
          "matches": ["<all_urls>"]
        }
    ]
  }